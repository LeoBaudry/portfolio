<script>
import { gsap } from "gsap";
import { navigate } from "astro:transitions/client";

let isAnimating = false;
const letterIds = [
  "letter-L_transition", 
  "letter-E_transition", 
  "letter-O1_transition", 
  "letter-O2_transition"
];

// Animation d'entrÃ©e
document.addEventListener("click", (e) => {
  const target = e.target instanceof Element ? e.target : null;
  const link = target?.closest("a[href]");
  
  if (!link) return;
  const href = link.getAttribute("href");
  if (!href || href.startsWith("http") || href.startsWith("#") || href.startsWith("mailto:") || href.startsWith("tel:")) {
    return;
  }
  if (isAnimating) return;
  
  e.preventDefault();
  isAnimating = true;
  
  const overlay = document.getElementById("page-transition");
  const letters = letterIds.map(id => document.getElementById(id)).filter(Boolean);
  
  if (!overlay || !letters.length) {
    isAnimating = false;
    return;
  }
  
  document.body.style.overflow = "hidden";
  overlay.style.pointerEvents = "auto";
  
  const enterAnimation = gsap.timeline();
  
  enterAnimation.fromTo(overlay, { y: "100%", opacity: 1 }, {
    y: "0%",
    duration: 0.6,
    ease: "power3.inOut"
  });
  
  enterAnimation.fromTo(letters, 
    { opacity: 0, y: 20 },
    {
      opacity: 1,
      y: 0,
      duration: 0.4,
      ease: "power2.out",
      stagger: 0.1
    },
    0.4
  );
  
  enterAnimation.to({}, { 
    duration: 0.4,
    onComplete: () => { void navigate(href); }
  });
}, true);

// Animation de sortie 
document.addEventListener("astro:after-swap", () => {
  const overlay = document.getElementById("page-transition");
  const letters = letterIds.map(id => document.getElementById(id)).filter(Boolean);
  const pageContent = document.getElementById("page-content");
  
  if (!overlay || !letters.length) return;
  
  gsap.set(overlay, { y: "0%", opacity: 1, pointerEvents: "auto" });
  gsap.set(letters, { opacity: 1, y: 0 });
  
  if (pageContent) {
    gsap.set(pageContent, { 
      filter: "blur(25px)",
      opacity: 0,
      y: 50 
    });
  }
  
  const exitAnimation = gsap.timeline({
    delay: 0.5,
    onComplete: () => {
      overlay.style.pointerEvents = "none";
      overlay.style.transform = "translateY(100%)";
      overlay.style.opacity = "0";
      document.body.style.overflow = "";
      if (pageContent) {
        gsap.set(pageContent, { filter: "none", opacity: 1, y: 0 });
      }
      isAnimating = false;
    }
  });
  
  exitAnimation.to(letters, {
    opacity: 0,
    y: -10,
    duration: 0.2,
    ease: "power2.in",
    stagger: 0.05
  }, 0);
  
  exitAnimation.to(overlay, {
    y: "-100%",
    duration: 0.6,
    ease: "power4.inOut"
  }, 0.1);
  
  if (pageContent) {
    exitAnimation.to(pageContent, {
      filter: "blur(0px)",
      opacity: 1,
      y: 0,
      duration: 0.8, 
      ease: "power3.out"
    }, 0.3);
  }
});
</script>