---
import "../styles/global.css";
import Head from "../components/layout/Head.astro";
import Header from "../components/layout/Header.astro";
import Footer from '../components/layout/Footer.astro';
import Loader from '../components/ui/Loader.astro';  
import Transition from '../components/layout/Transition.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---
<!doctype html>
<html lang="fr" data-theme="light">
<head>
    <Head title={title} description={description} image={image} />
    <ClientRouter />

    <!-- Schema.org -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Léo Baudry",
      "jobTitle": "Designer 3D & Créateur d'Expériences Web",
      "description": "Étudiant en multimédia passionné par le design 3D et la création d'expériences visuelles immersives",
      "url": "{siteUrl}",
      "image": "{siteUrl}/og-image.jpg",
      "sameAs": [
        "https://www.behance.net/lobaudry2",
        "https://https://www.linkedin.com/in/l%C3%A9o-baudry-a00b88336/"
      ],
      "knowsAbout": ["Design 3D", "Three.js", "GSAP", "Blender", "UI/UX Design", "Astro", "React", "Svelte"],
      "alumniOf": {
        "@type": "EducationalOrganization",
        "name": "MMI Montbéliard"
      }
    }
    </script>

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Léo Baudry",
      "url": "{siteUrl}",
      "description": "Portfolio de Léo Baudry - Designer 3D et créateur d'expériences web immersives",
      "inLanguage": "fr-FR"
    }
    </script>

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "@id": "{siteUrl}/#person"
      },
      "dateCreated": "2025-11-20",
      "description": "Portfolio professionnel de Léo Baudry",
      "inLanguage": "fr-FR"
    }
    </script>

</head>
<body>
    <Loader />
    <Transition />
    <Header />
    <div id="page-content">
      <slot />
    </div>
    <Footer />
</body>
</html>
<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
